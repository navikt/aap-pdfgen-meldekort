<style>

    @page {
        size: A4 portrait;
        margin: 1cm 0.3cm 0.5cm;
        padding-bottom: 1cm;

        @bottom-left {
            content: element(footer);
        }
    }

    @page :first {
        margin-top: 0;
        @top-left {
            content: element(header);
        }
    }

    * {
        font-family: "Source Sans Pro";
    }

    img {
        image-rendering: pixelated; /* Required for PDF/A-compliance */
    }

    h1 {
        font-weight: 500;
        font-style: normal;
        font-size: 20px;
        font-family: "Source Sans Pro";
    }

    h2 {
        font-weight: 500;
        font-style: normal;
        font-size: 18px;
        margin-top: 20px;
        margin-bottom: 50px;
    }

    p {
        margin-top: 3px;
        margin-bottom: 3px;
        font-size: 14px;
        font-family: "Source Sans Pro";
    }

    .navlogo-wrapper {
        position: absolute;
        top: 8mm;
        left: 7mm;
    }

    .navlogo {
        width: 48px;
    }

    .title-wrapper {
        padding-top: 3mm;
        padding-left: 30mm;
        display: inline-block;
    }

    p.inline {
        display: inline-block;
    }


    p.header__tittel {
        margin-top: 10px;
        font-weight: bold;
    }

    #footer {
        position: running(footer);
        font-size: 12px;
        margin-top: -25px;
        padding-left: 0.6cm;
    }

    .sidetall {
        float: right;
    }

    #pagenumber:before {
        content: counter(page);
    }

    #pagecount:before {
        content: counter(pages)
    }

    h3 {
        font-weight: 500;
        font-style: normal;
        font-size: 14px;
        font-family: "Source Sans Pro";
        margin-top: 5px;
        margin-bottom: 5px;
    }


    .container {
        margin: 0cm 0.7cm;
        height: 850px;
    }

    .personinfo {
        margin-top: 10mm;
    }

    .navn {
        font-weight: 500;
        font-size: 16px;
        width: 350px;
    }

    .id {
        width: 430px;
        margin-bottom: 30px;
    }

    .personikon {
        display: inline-block;
        width: 32px;
        margin-right: 8px;
        margin-left: 3px;
    }

    .persontekst {
        display: inline-block;
        width: 667px;
    }

    .sendt {
        display: inline-block;
        float: right;
        width: 145px;
        font-size: 14px;
    }

    .persontekst__personalia {
        display: inline-block;
    }

    .persontekst__sidetopp {
        display: block;
        margin-bottom: 32px;
    }

    ul {
        font-family: "Source Sans Pro";
        font-size: 14px;
        list-style-image: url({{ image "vedlegg.png" }});
    }

    ul li {
        margin-bottom: 5px;
        list-style: square;
    }

    ul:last-child {
        margin-bottom: 10px;
    }

    .temacontainer {
        width: 100%;
        /*margin-top: 5mm;*/
        margin-top: -10mm;
    }

    .tema {
        margin-top: 15px;
        height: auto;
        overflow: hidden;
    }

    .tema h2:first-child {
        margin-top: 0;
    }

    .tema h2 {
        margin-bottom: 10px;
    }
</style>
